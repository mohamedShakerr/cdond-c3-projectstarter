---
- name: "Creates backend app directory"
  file:
    path: ~/backend_app
    state: directory
    
- name: "copy artifact"
  become: yes
  copy:
    src: artifact.tar.gz
    dest: '~/backend_app/artifact.tar.gz'

- name: "Unzip backend files to correct directory"
  shell: |
    cd ~/backend_app
    tar -xf artifact.tar.gz

- name: "Start backend"
  shell: |
    cd ~/backend_app
    npm install
    pm2 stop default
    pm2 start npm -- start